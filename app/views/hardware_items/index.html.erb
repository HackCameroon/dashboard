<h1>Hardware Inventory</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="form-group">

      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for hardware">
        <span class="input-group-btn">
          <button class="btn btn-primary" type="button">Search</button>
        </span>
      </div>

    </div>
  </div>
</div>

<table class="table table-striped table-hover ">

  <thead>
    <tr>
      <th>UPC</th>
      <th>Name</th>
      <th>Category</th>
      <th>Count</th>
      <th>Available</th>
      <th>Link</th>
    </tr>
  </thead>

  <tbody>
  <% @hardware_items.each do |item| %><a href=""></a>
    <tr>
      <td><%= link_to item.upc, item %></td>
      <td><%= item.name %></td>
      <td><%= item.category %></td>
      <td><%= item.count %></td>
      <% if item.is_available? == 'Yes' %>
          <td> <span class="label label-success"><%= item.is_available? %></span></td>
      <% else %>
          <td> <span class="label label-danger"><%= item.is_available? %></span></td>
      <% end %>

      <% if item.link.empty? %>
          <td>No Link</td>
      <% else %>
          <td><%= link_to 'Item Hyperlink', item.link, target: :_blank %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hardware Item', new_hardware_item_path, class: 'btn btn-primary' %>
