<div class="page-header">
  <h1 class="page-title">Edit Project Team</h1>
</div>

<div class="row">

  <div class="col-md-12 col-xl-12">
    <div class="card">
      <div class="card-body">
        <p>Admin allows the user to basically do whatever they want. Be wise and don't give this privilege to anyone who doesn't deserve it. </p>
        <%= form_tag add_permissions_path, method: :get, class:'col-lg-12' do%>
            <div class="input-group">
              <%= text_field_tag :add_admin, params[:add_admin], class: 'form-control', placeholder: 'Email Address', type: "search", 'min-length' => 1%>
              <span class="input-group-btn">
                  <%= submit_tag 'Add Member', name: nil, class: 'btn btn-danger' %>
                </span>
            </div>
        <%end%>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-xl-4">
    <div class="card">
      <div class="card-body o-auto" style="height: 15rem">
        <table class="table card-table">
          <% @project.user.each do |user| %>
            <tr>
              <td><%= user.full_name.titleize %></td>
              <td class="text-right"><%= link_to 'Remove', project_remove_team_member_path(user), class: 'btn btn-xs btn-danger'%></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-8 col-xl-8">
  </div>

  <div class="col-md-4 col-xl-4">
      <%= link_to 'Return to Project', project_path(@project), class: 'btn btn-secondary' %>
  </div>


</div>
